<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>M0viEsHUB - Watch & Download</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Orbitron', sans-serif;
        }
    </style>
</head>

<body class="bg-[#0f0f0f] text-white">
    <!-- Header -->
    <header class="bg-gradient-to-r from-purple-900 to-indigo-800 p-4 shadow-md">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold text-white">üçø M0viEsHUB</h1>
        </div>
    </header>

    <!-- Search + Categories -->
    <section class="max-w-7xl mx-auto p-4">
        <% if (isAdmin) { %>
            <a href="/admin/add?admin=8892" class="inline-block mb-4 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">‚ûï Add Movie</a>
            <% } %>

                <form method="GET" class="mb-6 flex flex-col sm:flex-row gap-3">
                    <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search movies..." class="flex-grow px-4 py-2 rounded bg-gray-800 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-600" />
                    <button type="submit" class="px-6 py-2 bg-red-600 rounded hover:bg-red-700 transition text-white font-semibold">Search</button>
                </form>

                <div class="flex flex-wrap gap-3 mb-8">
                    <% const categories = ["All Movies", "Web Series", "South Hindi Dubbed", "Bollywood", "Hollywood Hindi", "Dual Audio"]; %>
                        <% categories.forEach(cat => { %>
                            <a href="/?category=<%= cat %>" class="px-4 py-2 text-sm rounded-full transition font-medium <%= category === cat ? 'bg-purple-700' : 'bg-gray-700 hover:bg-purple-700' %>">
                                <%= cat %>
                            </a>
                            <% }) %>
                </div>
    </section>

    <!-- Trending Now -->
    <% if (trendingMovies && trendingMovies.length > 0) { %>
        <section class="max-w-7xl mx-auto px-4 mb-12">
            <h2 class="text-2xl font-bold mb-4 text-red-400">üî• Trending Now</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <% trendingMovies.forEach(movie => { %>
                    <a href="/movies/<%= movie._id %>" class="bg-gray-900 hover:bg-gray-800 p-3 rounded-xl shadow-md transition">
                        <img src="<%= movie.poster %>" class="w-full h-48 object-cover rounded-lg mb-3">
                        <h3 class="text-base font-bold"><%= movie.title %></h3>
                    </a>
                    <% }) %>
            </div>
        </section>
        <% } %>

            <!-- All Movies -->
            <section class="max-w-7xl mx-auto px-4">
                <h2 class="text-2xl font-bold mb-4 text-blue-400">üé¨ All Movies</h2>

                <% if (movies.length === 0) { %>
                    <p class="text-center text-gray-400">üò¢ No movies found.</p>
                    <% } else { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 2xl:grid-cols-7 gap-6">
                            <% movies.forEach(movie => { %>
                                <div class="bg-gray-900 hover:bg-gray-800 p-3 rounded-xl shadow-md transition">
                                    <a href="/movies/<%= movie._id %>">
                        <img src="<%= movie.poster %>" class="w-full h-48 object-cover rounded-lg mb-3">
                        <h3 class="text-base font-bold"><%= movie.title %></h3>
                    </a>

                                    <p class="text-xs text-gray-400 mt-1">
                                        <%= movie.movieLanguage %>
                                    </p>

                                    <div class="flex gap-2 mt-2 flex-wrap">
                                        <% movie.quality.forEach(q => { %>
                                            <span class="bg-red-600 text-white text-xs px-2 py-1 rounded-full"><%= q %></span>
                                            <% }) %>
                                    </div>

                                    <% if (isAdmin) { %>
                                        <div class="mt-2 flex gap-3">
                                            <a href="/admin/edit/<%= movie._id %>?admin=8892" class="text-yellow-400 text-xs">‚úè Edit</a>
                                            <a href="/admin/delete/<%= movie._id %>?admin=8892" class="text-red-400 text-xs">üóë Delete</a>
                                        </div>
                                        <% } %>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </section>


            <!-- Pagination -->
            <div class="flex justify-center mt-12 space-x-2">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %><%= category ? '&category=' + category : '' %>" class="px-4 py-2 rounded-lg <%= currentPage === i ? 'bg-red-600' : 'bg-gray-700' %> hover:bg-purple-700 text-white font-semibold">
                        <%= i %>
                    </a>
                    <% } %>
            </div>

            <!-- Footer -->
            <footer class="bg-gray-800 mt-20 text-center py-6 text-sm text-gray-400">
                <div class="space-x-4">
                    <a href="/about-us" class="hover:underline">About Us</a>
                    <a href="/privacy-policy" class="hover:underline">Privacy Policy</a>
                    <a href="mailto:deloarhossen81722@gmail.com" class="hover:underline">Contact Us</a>
                </div>
                <p class="mt-2">&copy;
                    <%= new Date().getFullYear() %> M0viEsHUB. All rights reserved.</p>
            </footer>
</body>

</html>